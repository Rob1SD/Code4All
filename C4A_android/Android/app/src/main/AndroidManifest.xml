<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.codinschool">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/MainTheme"
            android:usesCleartextTraffic="true"
            tools:ignore="GoogleAppIndexingWarning" tools:targetApi="m">
        <activity
                android:name="com.example.codinschool.controllers.exercices_menu.ExerciceListActivity"
                android:label="@string/title_exercice_list"
                android:theme="@style/MainTheme">
        </activity>
        <activity
                android:name="com.example.codinschool.controllers.exercices_menu.ExerciceDetailActivity"
                android:label="@string/title_exercice_detail"
                android:parentActivityName="com.example.codinschool.controllers.exercices_menu.ExerciceListActivity"
                android:theme="@style/MainTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.codinschool.controllers.exercices_menu.ExerciceListActivity"/>
        </activity>
        <activity
                android:name="com.example.codinschool.controllers.classes_menu.ClasseActivity"
                android:screenOrientation="landscape">
        </activity>
        <activity
                android:name="com.example.codinschool.controllers.login.LoginActivity"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.example.codinschool.controllers.main_menu.MainMenuActivity"
                android:screenOrientation="landscape"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"/>

        <activity android:name="com.example.codinschool.controllers.exercice_engine.ExerciceEngineActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">

        </activity>
        <activity android:name="com.example.codinschool.controllers.store.StoreActivity"
                  android:screenOrientation="landscape">

        </activity>
    </application>

</manifest>