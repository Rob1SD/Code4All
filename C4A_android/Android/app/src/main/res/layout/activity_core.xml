<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.menu.MenuActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <fragment
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="0.30">
        </fragment>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="0.70">
            <fragment
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="0.90"
                    android:id="@+id/exerciceListFragment"
                    android:name="com.example.code4all.fragments.ExerciceListFragment"
                    tools:layout="@layout/fragment_exercice_list">

            </fragment>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="0.10">

                <Button
                        android:text="Go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/buttonPlay"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>