<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    >
        <fragment
                android:layout_width="match_parent"
                android:name="com.example.code4all.fragments.TopBarFragment"
                android:id="@+id/top_bar_fragment" tools:layout="@layout/fragment_top_bar"
                android:layout_height="wrap_content"/>
        <FrameLayout
                android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/content">

        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>